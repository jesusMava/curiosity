<div class="columns is-mobile">
  <div class="column is-half is-offset-one-quarter">
    <%= form_with model: @curiosity, url: curiosity_card_admin_path do |form| %>
      <%= render 'shared/body_form_curiosity', f: form %>

      <div class='block'>
        <%= form.label :extra_comments, class:'label' %>
        <%= form.text_area :extra_comment, class:'textarea'%>
      </div>

      <div class='block has-text-right'>
        <%= form.label :truthful, "Real", class:'title is-5' %>
        <%= form.check_box :truthful, { class: "checkbox" }, 'true', 'false' %>
      </div>
      <div class='has-text-right'>
        <%= link_to 'Destroy', curiosity_card_admin_path(@curiosity),
          class: 'button is-danger is-outlined', data: {
            turbo_method: :delete,
            turbo_confirm: 'Are you sure?'}
          %>
        <%= form.submit 'Publish', class: 'button is-primary' %>
      </div>
    <% end %>
  </div>
</div>
